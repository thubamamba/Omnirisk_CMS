<%= form_with(model: witness) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :claim_id %>
    <%= form.text_field :claim_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :witness_prefix %>
    <%= form.text_field :witness_prefix, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :witness_name %>
    <%= form.text_field :witness_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :witness_contact_number %>
    <%= form.text_field :witness_contact_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :witness_email %>
    <%= form.text_field :witness_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :witness_physical_address %>
    <%= form.text_field :witness_physical_address, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), witnesses_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), witness_path(@witness), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
