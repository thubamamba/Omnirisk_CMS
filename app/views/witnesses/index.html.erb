<%= content_for :title, "Witnesses" %>
<%= turbo_stream_from :witnesses %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Witnesses</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @witnesses, :claim_id, "Claim", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @witnesses, :witness_prefix, "Witness prefix", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @witnesses, :witness_name, "Witness name", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @witnesses, :witness_contact_number, "Witness contact number", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @witnesses, :witness_email, "Witness email", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @witnesses, :witness_physical_address, "Witness physical address", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>

    <%= link_to t("scaffold.new.title", model: "Witness"), new_witness_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("witnesses" if first_page?), class: "bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "witnesses/witness", collection: @witnesses, as: :witness, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Witness</p>
      <%= link_to t("scaffold.new.title", model: "Witness"), new_witness_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
