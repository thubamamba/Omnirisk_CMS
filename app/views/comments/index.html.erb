<%= content_for :title, "Comments" %>
<%= turbo_stream_from :comments %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Comments</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @comments, :claim_id, "Claim", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @comments, :user_id, "User", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @comments, :description, "Description", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @comments, :is_verified, "Is verified", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @comments, :is_active, "Is active", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>

    <%= link_to t("scaffold.new.title", model: "Comment"), new_comment_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("comments" if first_page?), class: "bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "comments/comment", collection: @comments, as: :comment, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Comment</p>
      <%= link_to t("scaffold.new.title", model: "Comment"), new_comment_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
