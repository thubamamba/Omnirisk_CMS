<%= content_for :title, "Comments ##{@comment.id}" %>
<%= turbo_stream_from @comment %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Comments", comments_path, class: "text-black dark:text-white" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Comment #<%= @comment.id %>
    </h1>
    <%= link_to t("edit"), edit_comment_path(@comment), class: "btn btn-secondary" %>
  </div>

  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">
    <%= render @comment %>
  </div>
</div>
