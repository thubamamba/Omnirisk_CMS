<%= content_for :title, "Municipalities ##{@municipality.id}" %>
<%= turbo_stream_from @municipality %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Municipalities", municipalities_path, class: "text-black dark:text-white" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Municipality #<%= @municipality.id %>
    </h1>
    <%= link_to t("edit"), edit_municipality_path(@municipality), class: "btn btn-secondary" %>
  </div>

  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">
    <%= render @municipality %>
  </div>
</div>
