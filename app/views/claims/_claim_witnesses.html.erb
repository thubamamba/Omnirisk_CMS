<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="flex xl:flex-row lg:flex-row flex-col">
    <%# Witness Prefix %>
    <div class="w-full p-0.5">
      <div class="form-group">
        <%= f.label "Prefix" %>
        <%= f.select :witness_prefix, options_for_select([%w[Mr Mr], %w[Mrs Mrs], %w[Miss Miss], %w[Ms Ms]]), {}, class: "form-control inline" %>
      </div>
    </div>

    <%# Witness name %>
    <div class="w-full p-0.5">
      <div class="form-group">
        <%= f.label "Name" %>
        <%= f.text_field :witness_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="flex xl:flex-row lg:flex-row flex-col">
    <%# Witness Contact number %>
    <div class="w-full p-0.5">
      <div class="form-group">
        <%= f.label "Contact Number" %>
        <%= f.text_field :witness_contact_number, class: 'form-control' %>
      </div>
    </div>

    <%# Witness Email Address %>
    <div class="w-full p-0.5">
      <div class="form-group">
        <%= f.label "Email Address" %>
        <%= f.email_field :witness_email, class: 'form-control' %>
      </div>
    </div>
  </div>

  <%# Witness address %>
  <div class="form-group">
    <%= f.label "Physical Address" %>
    <%= f.email_field :witness_physical_address, class: 'form-control' %>
  </div>

  <div class="">
    <button type="button" data-action="nested-form#remove" class="btn btn-primary mb-2">Remove Witness</button>
  </div>
  <%= f.hidden_field :_destroy %>
</div>