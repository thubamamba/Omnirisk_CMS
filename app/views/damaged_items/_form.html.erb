<%= form_with(model: damaged_item) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :item_name %>
    <%= form.text_field :item_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :serial_number %>
    <%= form.text_field :serial_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :estimated_value %>
    <%= form.text_field :estimated_value, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :claim_id %>
    <%= form.text_field :claim_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), damaged_items_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), damaged_item_path(@damaged_item), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
