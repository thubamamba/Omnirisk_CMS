<% content_for :section_title, "Buttons" %>

<% types = {
  "Primary" => "btn-primary",
  "Secondary" => "btn-secondary",
  "Success" => "btn-success",
  "Danger" => "btn-danger",
  "Light" => "btn-light",
  "Dark" => "btn-dark",
  "Link" => "btn-link"
} %>

<%= h2_with_anchor "Button Styles" %>
<p>Buttons come with a variety of different styles out of the box. For example: <code>btn btn-primary</code></p>
<%= render "jumpstart/docs/snippet" do %>
  <div class="space-y-4 space-x-2">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type}" %>
    <% end %>
  </div>

  <p class="mt-4">Buttons can also be applied to anchor tags.</p>

  <div class="space-y-4 space-x-2">
    <% types.each do |name, type| %>
      <%= link_to name, "#", class: "btn #{type}" %>
    <% end %>
  </div>
<% end %>

<%= h2_with_anchor "Sizes" %>
<p>Buttons come in a variety of sizes from <code>btn-xs</code>, <code>btn-sm</code>, <code>btn-lg</code> to <code>btn-xl</code>.</p>
<%= render "jumpstart/docs/snippet" do %>
  <div class="space-y-4 space-x-2">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type} btn-xs" %>
    <% end %>
  </div>

  <div class="space-y-4 space-x-2 mt-4">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type} btn-sm" %>
    <% end %>
  </div>

  <div class="space-y-4 space-x-2 mt-4">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type}" %>
    <% end %>
  </div>

  <div class="space-y-4 space-x-2 mt-4">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type} btn-lg" %>
    <% end %>
  </div>

  <div class="space-y-4 space-x-2 mt-4">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type} btn-xl" %>
    <% end %>
  </div>
<% end %>

<%= h2_with_anchor "Icon Buttons" %>
<p>See the <%= link_to "Icons documentation", icons_docs_path %>.</p>

<%= render "jumpstart/docs/snippet" do %>
  <div class="space-y-4">
    <% types.each do |name, type| %>
      <%= tag.button class: "btn #{type}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 mr-1">
          <path d="M8.75 2.75a.75.75 0 0 0-1.5 0v5.69L5.03 6.22a.75.75 0 0 0-1.06 1.06l3.5 3.5a.75.75 0 0 0 1.06 0l3.5-3.5a.75.75 0 0 0-1.06-1.06L8.75 8.44V2.75Z" />
          <path d="M3.5 9.75a.75.75 0 0 0-1.5 0v1.5A2.75 2.75 0 0 0 4.75 14h6.5A2.75 2.75 0 0 0 14 11.25v-1.5a.75.75 0 0 0-1.5 0v1.5c0 .69-.56 1.25-1.25 1.25h-6.5c-.69 0-1.25-.56-1.25-1.25v-1.5Z" />
        </svg>
        <%= name %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= h2_with_anchor "Block Buttons" %>
<p>Buttons are <code>inline-flex</code> by default. To make them full-width, you can add <code>btn-block</code>.</p>
<%= render "jumpstart/docs/snippet" do %>
  <div class="space-y-4 w-96">
    <% types.each do |name, type| %>
      <%= tag.button class: "btn #{type} btn-block" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 mr-1">
          <path d="M8.75 2.75a.75.75 0 0 0-1.5 0v5.69L5.03 6.22a.75.75 0 0 0-1.06 1.06l3.5 3.5a.75.75 0 0 0 1.06 0l3.5-3.5a.75.75 0 0 0-1.06-1.06L8.75 8.44V2.75Z" />
          <path d="M3.5 9.75a.75.75 0 0 0-1.5 0v1.5A2.75 2.75 0 0 0 4.75 14h6.5A2.75 2.75 0 0 0 14 11.25v-1.5a.75.75 0 0 0-1.5 0v1.5c0 .69-.56 1.25-1.25 1.25h-6.5c-.69 0-1.25-.56-1.25-1.25v-1.5Z" />
        </svg>
        <%= name %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= h2_with_anchor "Outlined Buttons" %>
<p>Outlined buttons can be used by adding <code>btn-outline</code>.</p>
<%= render "jumpstart/docs/snippet" do %>
  <div class="space-y-4">
    <% types.each do |name, type| %>
      <%= tag.button name, class: "btn #{type} btn-outline" %>
    <% end %>
  </div>
<% end %>

<%= h2_with_anchor "Disabled" %>
<p>Buttons can be disabled by adding the <code>disabled</code> attribute to the button tag.</p>
<%= render "jumpstart/docs/snippet" do %>
  <div class="space-y-4 space-x-2">
    <% types.each do |name, type| %>
      <%= tag.button button_text(name), class: "btn #{type}", disabled: true %>
    <% end %>
  </div>
<% end %>
