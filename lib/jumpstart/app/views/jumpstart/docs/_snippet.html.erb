<div class="not-prose">
  <%= content = yield %>

  <div data-controller="toggle" class="py-2 my-4 bg-white dark:text-gray-100 dark:bg-gray-900 rounded shadow-inner-sm">
    <button class="mb-0 btn btn-secondary btn-small" data-action="click->toggle#toggle">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 mr-2">
        <path fill-rule="evenodd" d="M4.78 4.97a.75.75 0 0 1 0 1.06L2.81 8l1.97 1.97a.75.75 0 1 1-1.06 1.06l-2.5-2.5a.75.75 0 0 1 0-1.06l2.5-2.5a.75.75 0 0 1 1.06 0ZM11.22 4.97a.75.75 0 0 0 0 1.06L13.19 8l-1.97 1.97a.75.75 0 1 0 1.06 1.06l2.5-2.5a.75.75 0 0 0 0-1.06l-2.5-2.5a.75.75 0 0 0-1.06 0ZM8.856 2.008a.75.75 0 0 1 .636.848l-1.5 10.5a.75.75 0 0 1-1.484-.212l1.5-10.5a.75.75 0 0 1 .848-.636Z" clip-rule="evenodd" />
      </svg>
      Toggle Source
    </button>
    <div class="hidden mt-2"
          data-toggle-target="toggleable"
          data-transition-enter="transition-all ease-linear duration-100"
          data-transition-enter-from="opacity-0 h-0"
          data-transition-enter-to="opacity-100"
          data-transition-leave="transition-all ease-linear duration-100"
          data-transition-leave-from="opacity-100"
          data-transition-leave-to="opacity-0">
      <pre class="example-code"><code><%= content.to_param.strip %></code></pre>
    </div>
  </div>
</div>
